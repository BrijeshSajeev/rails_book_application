<div class="text-center mt-20">
    <h1 class="text-4xl font-bold mb-4">Welcome to Books</h1>
    <% if user_signed_in? %>
      <p class="text-xl mb-4">Hello, <%= current_user.email %>!</p>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
    <% else %>
      <p class="text-xl mb-8">You are not logged in. Please log in or sign up to continue.</p>
      <div class="space-x-4">
        <%= link_to 'Login', new_user_session_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
</div>