<div class="container mx-auto px-12 py-8">
  <h1 class="text-2xl font-bold mb-12 text-center text-gray-950 uppercase" >Books List</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr>
        <th class="py-2 px-4 border border-gray-200 text-left">Name</th>
        <th class="py-2 px-4 border border-gray-200 text-left">Author</th>
        <th class="py-2 px-4 border border-gray-200 text-left">Year</th>
        <th class="py-2 px-4 border border-gray-200 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Replace with dynamic content -->
      <% @books.each do |book|%>
        <tr>
          <td class="py-2 px-4 border border-gray-200"><%=book.name%></td>
          <td class="py-2 px-4 border border-gray-200"><%=book.author.name%></td>
          <td class="py-2 px-4 border border-gray-200"><%=book.year%></td>
          <td class="py-2 px-4 border border-gray-200">
            <div class="flex gap-2">
              <%= link_to 'Detail', book_path(book), class: "bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600"  %>
              <%= link_to 'Update', edit_book_path(book), class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600"%>
              <%= link_to 'Delete', book_path(book), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                },
                class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600"
              %>
            </div>
          </td>
        </tr>
      <%end%>
      <!-- Repeat the <tr> block for more rows -->
    </tbody>
  </table>
</div>
<div class="flex justify-center">
  <%= link_to 'Add New Book', new_book_path, class: "my-12 bg-orange-400 text-white  px-3 py-1 rounded hover:bg-orange-300" %>
</div>