<div class="bg-gray-100 h-screen flex items-center justify-center">
  <div>
    <h1 class="text-3xl font-bold mb-4">Users</h1>
    <%= link_to 'New User', new_user_path, class: 'inline-block mb-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700' %>
    <ul class="list-disc pl-6">
      <% @users.each do |user| %>
        <li class="mb-2">
          <%= link_to user.name, user, class: 'text-blue-600 hover:text-blue-800' %>
        </li>
      <% end %>
    </ul>
    <div class="bg-gray-100  flex items-center justify-center mt-10">
      <%= link_to "Look For Books", books_path, class: "bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600" %>
    </div>
  </div>
</div>
